# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# JavaScript, TypeScript, Vue, JSON, YAML
[*.{js,jsx,ts,tsx,vue,json,yml,yaml}]
indent_size = 2

# PHP files
[*.php]
indent_size = 4

# Python files
[*.py]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Git config files
[.git*]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Composer/NPM lock files
[{composer.lock,package-lock.json}]
indent_size = 2

# Blade templates
[*.blade.php]
indent_size = 4
